%h1 Candidates
%table.table
  %thead
    %tr
      %th Date
      %th Name
      %th Stage
      %th Assigned
      %th 
  %tbody
    - @candidates.each do |candidate|
      %tr
        %td= time_ago_in_words(candidate.start_date)
        %td= candidate.name
        %td= candidate.stage
        %td= candidate.assigned_to
        %td= link_to 'Show', candidate_path(candidate.id)
